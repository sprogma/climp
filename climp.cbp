<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<CodeBlocks_project_file>
	<FileVersion major="1" minor="6" />
	<Project>
		<Option title="climp" />
		<Option pch_mode="2" />
		<Option compiler="gcc" />
		<Build>
			<Target title="Windows">
				<Option platforms="Windows;" />
				<Option output="bin/Windows/climp" imp_lib="$(TARGET_OUTPUT_DIR)$(TARGET_OUTPUT_BASENAME).a" def_file="$(TARGET_OUTPUT_DIR)$(TARGET_OUTPUT_BASENAME).def" prefix_auto="1" extension_auto="1" />
				<Option object_output="obj/Windows/" />
				<Option type="3" />
				<Option compiler="gcc" />
				<Option createDefFile="1" />
				<Option createStaticLib="1" />
				<Compiler>
					<Add option="-O2" />
					<Add option="-Wall" />
					<Add option="-fopenmp" />
					<Add option="-DBUILD_DLL" />
					<Add directory="../../OCL/include" />
				</Compiler>
				<Linker>
					<Add option="-s" />
					<Add option="-static" />
					<Add option="-fopenmp" />
					<Add library="user32" />
					<Add library="../../OCL/bin/OpenCL.dll" />
				</Linker>
			</Target>
			<Target title="Linux">
				<Option platforms="Unix;Mac;" />
				<Option output="bin/Linux/climp" prefix_auto="1" extension_auto="1" />
				<Option object_output="obj/Linux/" />
				<Option type="3" />
				<Option compiler="gcc" />
				<Option createDefFile="1" />
				<Option createStaticLib="1" />
				<Compiler>
					<Add option="-Wall" />
					<Add option="-DBUILD_DLL" />
					<Add option="-g" />
				</Compiler>
				<Linker>
					<Add library="user32" />
				</Linker>
			</Target>
		</Build>
		<Compiler>
			<Add directory="source" />
		</Compiler>
		<Unit filename="source/climpapi.c">
			<Option compilerVar="CC" />
		</Unit>
		<Unit filename="source/climpapi.h" />
		<Unit filename="source/gpgpu.c">
			<Option compilerVar="CC" />
		</Unit>
		<Unit filename="source/gpgpu.h" />
		<Unit filename="source/kernel.cl" />
		<Unit filename="source/kernel_template.cl" />
		<Unit filename="source/main.c">
			<Option compilerVar="CC" />
		</Unit>
		<Unit filename="source/main.h" />
		<Extensions>
			<lib_finder disable_auto="1" />
		</Extensions>
	</Project>
</CodeBlocks_project_file>
